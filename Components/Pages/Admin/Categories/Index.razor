@page "/admin/categories"
@layout AdminLayout
@using BlazorBlog.Data
@using Microsoft.EntityFrameworkCore
@inject BlogDbContext DbContext
@rendermode InteractiveServer

<PageTitle>分类管理 - 管理后台</PageTitle>

<div class="admin-page-header">
    <h1 class="admin-page-title">分类管理</h1>
    <p class="admin-page-subtitle">管理文章分类</p>
</div>

@if (isLoading)
{
    <p>正在加载...</p>
}
else
{
    <div class="row">
        <!-- 分类列表 -->
        <div class="col-md-8">
            <div class="admin-card">
                <div class="admin-card-header">
                    <h3 class="admin-card-title">分类列表 (@categories.Count 个)</h3>
                </div>
                <div class="admin-card-body">
                    @if (categories.Any())
                    {
                        <table class="admin-table">
                            <thead>
                                <tr>
                                    <th>名称</th>
                                    <th>图标</th>
                                    <th>文章数</th>
                                    <th>排序</th>
                                    <th>创建时间</th>
                                    <th>操作</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var category in categories)
                                {
                                    <tr>
                                        <td>
                                            <strong>@category.Name</strong>
                                            @if (!string.IsNullOrEmpty(category.Description))
                                            {
                                                <div class="text-muted small">@category.Description</div>
                                            }
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(category.Icon))
                                            {
                                                <i class="@category.Icon"></i>
                                            }
                                        </td>
                                        <td>@category.PostsCount</td>
                                        <td>@category.SortOrder</td>
                                        <td>@category.CreatedAt.ToString("yyyy-MM-dd")</td>
                                        <td>
                                            <div class="table-actions">
                                                <button class="btn-action btn-action-primary" @onclick="() => EditCategory(category)">编辑</button>
                                                <button class="btn-action btn-action-danger" @onclick="() => DeleteCategory(category.Id)">删除</button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <p class="text-muted text-center py-4">暂无分类</p>
                    }
                </div>
            </div>
        </div>
        
        <!-- 添加/编辑分类表单 -->
        <div class="col-md-4">
            <div class="admin-card">
                <div class="admin-card-header">
                    <h3 class="admin-card-title">@(editingCategory != null ? "编辑分类" : "添加分类")</h3>
                </div>
                <div class="admin-card-body">
                    <div class="admin-form-group">
                        <label class="admin-form-label">名称</label>
                        <input type="text" @bind="categoryForm.Name" class="admin-form-input" placeholder="输入分类名称" />
                    </div>
                    
                    <div class="admin-form-group">
                        <label class="admin-form-label">Slug</label>
                        <input type="text" @bind="categoryForm.Slug" class="admin-form-input" placeholder="URL 标识符" />
                    </div>
                    
                    <div class="admin-form-group">
                        <label class="admin-form-label">描述</label>
                        <textarea @bind="categoryForm.Description" class="admin-form-input admin-form-textarea" placeholder="分类描述"></textarea>
                    </div>
                    
                    <div class="admin-form-group">
                        <label class="admin-form-label">图标 (Bootstrap Icons)</label>
                        <input type="text" @bind="categoryForm.Icon" class="admin-form-input" placeholder="bi bi-code-slash" />
                    </div>
                    
                    <div class="admin-form-group">
                        <label class="admin-form-label">排序</label>
                        <input type="number" @bind="categoryForm.SortOrder" class="admin-form-input" />
                    </div>
                    
                    <div class="d-flex gap-2">
                        <button class="btn-action btn-action-primary flex-grow-1" @onclick="SaveCategory">
                            @(editingCategory != null ? "更新" : "添加")
                        </button>
                        @if (editingCategory != null)
                        {
                            <button class="btn-action btn-action-secondary" @onclick="CancelEdit">取消</button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private bool isLoading = true;
    private List<Category> categories = new();
    private Category? editingCategory = null;
    private CategoryForm categoryForm = new();
    
    protected override async Task OnInitializedAsync()
    {
        await LoadCategories();
    }
    
    private async Task LoadCategories()
    {
        try
        {
            categories = await DbContext.Categories
                .OrderBy(c => c.SortOrder)
                .ToListAsync();
            
            isLoading = false;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading categories: {ex.Message}");
            isLoading = false;
        }
    }
    
    private void EditCategory(Category category)
    {
        editingCategory = category;
        categoryForm = new CategoryForm
        {
            Name = category.Name,
            Slug = category.Slug,
            Description = category.Description,
            Icon = category.Icon,
            SortOrder = category.SortOrder
        };
    }
    
    private void CancelEdit()
    {
        editingCategory = null;
        categoryForm = new CategoryForm();
    }
    
    private async Task SaveCategory()
    {
        try
        {
            if (editingCategory != null)
            {
                // 更新现有分类
                editingCategory.Name = categoryForm.Name;
                editingCategory.Slug = categoryForm.Slug;
                editingCategory.Description = categoryForm.Description;
                editingCategory.Icon = categoryForm.Icon;
                editingCategory.SortOrder = categoryForm.SortOrder;
                editingCategory.UpdatedAt = DateTime.UtcNow;
            }
            else
            {
                // 创建新分类
                var category = new Category
                {
                    Id = Guid.NewGuid(),
                    Name = categoryForm.Name,
                    Slug = categoryForm.Slug,
                    Description = categoryForm.Description,
                    Icon = categoryForm.Icon,
                    SortOrder = categoryForm.SortOrder,
                    CreatedAt = DateTime.UtcNow,
                    UpdatedAt = DateTime.UtcNow
                };
                DbContext.Categories.Add(category);
            }
            
            await DbContext.SaveChangesAsync();
            await LoadCategories();
            CancelEdit();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error saving category: {ex.Message}");
        }
    }
    
    private async Task DeleteCategory(Guid categoryId)
    {
        var category = await DbContext.Categories.FindAsync(categoryId);
        if (category != null)
        {
            DbContext.Categories.Remove(category);
            await DbContext.SaveChangesAsync();
            await LoadCategories();
        }
    }
    
    private class CategoryForm
    {
        public string Name { get; set; } = string.Empty;
        public string Slug { get; set; } = string.Empty;
        public string? Description { get; set; }
        public string? Icon { get; set; }
        public int SortOrder { get; set; }
    }
}
