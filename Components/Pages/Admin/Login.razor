@page "/admin/login"
@using BlazorBlog.Services
@using BlazorBlog.Services.Interfaces
@using BlazorBlog.Components.Layout
@layout EmptyLayout
@inject IAuthService AuthService
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Navigation

<div class="admin-login-container">
    <div class="admin-login-card">
        <div class="text-center mb-4">
            <i class="bi bi-shield-lock-fill text-primary" style="font-size: 3rem;"></i>
            <h2 class="mt-2">后台管理系统</h2>
            <p class="text-muted">请登录以继续</p>
        </div>

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert alert-danger" role="alert">
                @errorMessage
            </div>
        }

        <EditForm Model="@loginModel" OnValidSubmit="HandleLogin">
            <DataAnnotationsValidator />

            <div class="mb-3">
                <label class="form-label">用户名</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-person"></i></span>
                    <InputText @bind-Value="loginModel.Username" class="form-control" placeholder="请输入管理员账号" />
                </div>
                <ValidationMessage For="@(() => loginModel.Username)" />
            </div>

            <div class="mb-4">
                <label class="form-label">密码</label>
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-key"></i></span>
                    <InputText @bind-Value="loginModel.Password" type="password" class="form-control" placeholder="请输入密码" />
                </div>
                <ValidationMessage For="@(() => loginModel.Password)" />
            </div>

            <button type="submit" class="btn btn-primary w-100 py-2" disabled="@isLoading">
                @if (isLoading)
                {
                    <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                    <span>登录中...</span>
                }
                else
                {
                    <span>登录</span>
                }
            </button>
        </EditForm>
        
        <div class="text-center mt-4">
            <a href="/" class="text-decoration-none text-muted small">
                <i class="bi bi-arrow-left me-1"></i> 返回首页
            </a>
        </div>
    </div>
</div>

<style>
    .admin-login-container {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #f8f9fa;
        background-image: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
    }

    .admin-login-card {
        width: 100%;
        max-width: 400px;
        padding: 2.5rem;
        background: white;
        border-radius: 1rem;
        box-shadow: 0 10px 25px rgba(0,0,0,0.05);
    }
</style>

@code {
    private LoginModel loginModel = new();
    private string? errorMessage;
    private bool isLoading = false;

    private class LoginModel
    {
        [System.ComponentModel.DataAnnotations.Required(ErrorMessage = "请输入用户名")]
        public string Username { get; set; } = "";

        [System.ComponentModel.DataAnnotations.Required(ErrorMessage = "请输入密码")]
        public string Password { get; set; } = "";
    }

    private async Task HandleLogin()
    {
        isLoading = true;
        errorMessage = null;

        try
        {
            var user = await AuthService.LoginAsync(loginModel.Username, loginModel.Password);

            if (user != null)
            {
                if (user.Role != "admin")
                {
                    errorMessage = "该账号没有管理员权限";
                    isLoading = false;
                    return;
                }

                var customAuthStateProvider = (CustomAuthenticationStateProvider)AuthStateProvider;
                await customAuthStateProvider.UpdateAuthenticationState(new UserSession
                {
                    UserId = user.Id.ToString(),
                    Username = user.Username,
                    Role = user.Role
                });

                Navigation.NavigateTo("/admin", true);
            }
            else
            {
                errorMessage = "用户名或密码错误";
            }
        }
        catch (Exception ex)
        {
            errorMessage = "登录发生错误，请稍后重试";
            Console.WriteLine(ex);
        }
        finally
        {
            isLoading = false;
        }
    }
}
