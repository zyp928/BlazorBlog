@using Microsoft.AspNetCore.Components.Authorization
@using BlazorBlog.Components.Shared

<CascadingAuthenticationState>
    <Router AppAssembly="typeof(Program).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="routeData" DefaultLayout="typeof(Layout.MainLayout)">
                <NotAuthorized>
                    @if (context.User.Identity?.IsAuthenticated != true)
                    {
                        <RedirectToLogin />
                    }
                    else
                    {
                        <div class="d-flex flex-column align-items-center justify-content-center vh-100 bg-light">
                            <div class="text-center p-5 bg-white rounded shadow">
                                <i class="bi bi-shield-lock text-danger" style="font-size: 4rem;"></i>
                                <h2 class="mt-3">访问被拒绝</h2>
                                <p class="text-muted mb-4">您没有权限访问此页面。</p>
                                <a href="/" class="btn btn-primary">返回首页</a>
                            </div>
                        </div>
                    }
                    }
                </NotAuthorized>
            </AuthorizeRouteView>
            <FocusOnNavigate RouteData="routeData" Selector="h1" />
        </Found>
    </Router>
</CascadingAuthenticationState>
